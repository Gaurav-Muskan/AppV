<mvc:View controllerName="restinpeace.project1.controller.First"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns="sap.m">
  <Page id="page" >
    <customHeader>
        <Bar>
            <contentMiddle>
                <Title text="I am First view" style="text-align: center; width: 100%;" />
                <Label text="Enter your Name" class="sapUiSmallMargin" required="true" design="Bold"/>
                <Input width="30%" value="Gaurav "></Input>
            </contentMiddle>
        </Bar>
    </customHeader>
    <footer>
      <Bar>
        <contentMiddle>
          <Button text="Go to Second View" press="onGoSecond" type="Emphasized" />
        </contentMiddle>
      </Bar>
    </footer>
  </Page>
</mvc:View>
